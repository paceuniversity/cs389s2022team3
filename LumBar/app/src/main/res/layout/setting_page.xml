<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3E7"
    android:layout_gravity="center"
    tools:context=".setting.SettingPage">

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="100dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="#654900"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-16dp" />

    <ImageView
        android:id="@+id/info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/privacy"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <Button
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/privacyBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/info"
        android:background="#00FFFFFF"
        android:text="About LumBar"
        android:textColor="#375A22" />

    <ImageView
        android:id="@+id/privacy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/helpic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/ic_baseline_privacy_tip_24" />

    <Button
        android:id="@+id/privacyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/help"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/info"
        android:background="#00FFFFFF"
        android:text="Privacy Policy"
        android:textColor="#375A22" />

    <Button
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/helpic"
        android:background="#00FFFFFF"
        android:text="Contact US"
        android:textColor="#375A22" />

    <!--    <Button-->
