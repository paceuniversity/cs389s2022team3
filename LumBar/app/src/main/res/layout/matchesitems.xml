<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3E7"
    android:padding="20sp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/custom_matches_border"
        android:orientation="vertical"
        android:paddingLeft="20sp">

        <ImageView
            android:id="@+id/MatchImg"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-50dp"
            android:layout_toEndOf="@+id/MatchImg"
            android:orientation="vertical"
            android:paddingLeft="10sp">

            <TextView
                android:id="@+id/MatchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/amiko_bold"
                android:paddingBottom="10sp"
                android:text="Match's Name"
                android:textColor="#353535"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/MatchID"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:fontFamily="@font/amiko"
                android:text="Match's ID" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>