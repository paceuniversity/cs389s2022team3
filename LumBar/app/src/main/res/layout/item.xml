<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#25FFFFFF"
    android:clipToPadding="false"
    android:outlineProvider="bounds"
    android:paddingLeft="40sp"
    android:paddingTop="20sp"
    android:paddingRight="40sp"
    android:paddingBottom="20sp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#43FFFFFF"
        android:elevation="2dp"
        app:cardCornerRadius="4dp">

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/nameMatch"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:fontFamily="@font/amiko_bold"
                android:gravity="bottom"
                android:paddingLeft="40sp"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                tools:text="Name" />

            <TextView
                android:id="@+id/LawFirmName"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:fontFamily="@font/amiko_semibold"
                android:gravity="bottom"
                android:paddingLeft="40sp"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                tools:text="LawFirm" />

            <TextView
                android:id="@+id/emailMatch"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:fontFamily="@font/amiko"
                android:gravity="bottom"
                android:paddingLeft="40sp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:text="Email" />

            <TextView
                android:id="@+id/phoneMatch"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:fontFamily="@font/amiko"
                android:gravity="bottom"
                android:paddingLeft="40sp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:text="Phone" />

            <TextView
                android:id="@+id/AddressMatch"
                android:layout_width="match_parent"
                android:layout_height="298dp"
                android:fontFamily="@font/amiko"
                android:gravity="bottom"
                android:paddingLeft="40sp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:text="Address" />

            <TextView
                android:id="@+id/TopicMatch"
                android:layout_width="match_parent"
                android:layout_height="344dp"
                android:background="#08FFFFFF"
                android:fontFamily="@font/amiko"
                android:gravity="bottom"
                android:paddingLeft="40sp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:text="Topic" />

            <TextView
                android:id="@+id/WebLinkMatch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#31FFFFFF"
                android:fontFamily="@font/amiko"
                android:gravity="bottom"
                android:paddingLeft="40sp"
                android:paddingBottom="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:text="Website" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>